{
  "name": "Leah: Language Educator And Helper'",
  "version": "1.0",
  "description": "AI driven language learning",
  "manifest_version": 3,
  "permissions": ["activeTab", "webNavigation", "storage", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://cdbfly.org/*"],
      "js": ["content.js"],
      "css": ["leah-styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["leah-content.js"],
      "matches": ["https://cdbfly.org/*"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
